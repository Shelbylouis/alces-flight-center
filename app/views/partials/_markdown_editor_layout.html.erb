<div data-markdown-editor>
    <ul class="nav nav-tabs nav-fill">
        <li class='nav-item ml-2 rounded-top <%= 'nav-link--active' if activate == 'write' %>'>
            <%= form_builder.button 'Write',
                class: 'btn btn-link',
                'data-markdown-write-button': true,
                'data-write-url': write_path
            %>
        </li>
        <li class='nav-item rounded-top <%= 'nav-link--active' if activate == 'preview' %>'>
            <%= form_builder.button 'Preview',
                class: 'btn btn-link',
                'data-markdown-preview-button': true,
                'data-preview-url': preview_path
            %>
        </li>
        <li class='nav-item text-muted nav-item-text text-right'>
          Styling with
          <%= render 'partials/markdown_information', label:  'Markdown'%>
          is supported
        </li>
    </ul>

    <%= yield if block_given? %>
</div>
