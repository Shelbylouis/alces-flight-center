<% if policy(@case).assign_engineer? || ( policy(@case).assign_contact? && column == :contact_id ) %>
  <%= form_for @case do |f| %>
    <div class="form-group">
      <div class="input-group">
      <%= f.collection_select(
            column,
            users,
            :id,
            Proc.new { |a| "#{a.name}"},
            {
              include_blank: 'Nobody'
            },
            {
              class: 'form-control'
            }
          )
      %>
        <div class="input-group-append">
      <%= f.submit "Change assignment",
                   class: 'btn btn-primary btn-sm'
      %>
        </div>
      </div>
    </div>
  <% end %>
<% else %>
  <%= assignee&.name or 'Nobody' %>
<% end %>
